{% for entity in books %}
    <div class="ProductCard product is-imageLoaded">
        <div class="ProductCard-imageContainer product-img-container">
            <a href="{{ path('book_show', { 'id': entity.isbn }) }}">
                <div class="ProductCard-image product-image"
                     style="opacity: 1; background-image:url({{ asset("bundles/app/images/ilustracje/#{entity.obrazek}" ) }});">
                </div>
                <div class="tlo"></div>
        </div>
        <div class="dolny">
            <div class="card-autor">{{ entity.autor }}</div>
            <div class="card-tytul">{{ entity.tytul }}</div>
        </div>
        <div class="top-right">{{ entity.cena }}<span> Z≈Å</span></div>
        <div class="top-left">
            <div class="card-AddToBasket"><a href="{{ path('add_to_cart', {'isbn': entity.isbn }) }}"
                                             class="card-lockup">
                    <div class="card-basket"></div>
                </a></div>
        </div>
        </a>
    </div>
{% endfor %}