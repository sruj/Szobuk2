{% block contents %}
    <div class="boxMy szerokie">
        <div id="boxMyinside">
            {% if is_granted('ROLE_ADMIN') %}
                <h3> Zamówienie nr: <larger><strong>{{ zamowienie.idzamowienie }}</strong></larger>,<br/> złożone: {{ zamowienie.datazlozenia|date('Y-m-d H:i:s') }} <br/>
                    przez klienta nr <a id="OrangeButton" href="{{ path('panelSortFromDetails',{ 'findBy':'idklient', 'Identifier':zamowienie.idklient.idklient}) }}">{{ zamowienie.idklient.idklient }}</a>
                </h3>
            {% else %}
                <h3> Zamówienie nr: <strong>{{ zamowienie.idzamowienie }}</strong>,<br/> złożone: {{ zamowienie.datazlozenia|date('Y-m-d H:i:s') }} 
                    <br/>przez {{ app.user.username }}
                </h3>
            {% endif %}
 <div class="boxDown">
        <h4 class="greyHeader">Dane do wysyłki:</h4>
            <ul>
                <li>{{ zamowienie.idklient.imie }} {{ zamowienie.idklient.nazwisko }}</li>
                <li>{{ zamowienie.idklient.ulica }} {{ zamowienie.idklient.nrDomu }} {{ zamowienie.idklient.nrmieszkania }}</li>
                <li>{{ zamowienie.idklient.kodpocztowy }}, {{ zamowienie.idklient.miasto }} </li>
            </ul>

            <h4 class="greyHeader">Produkty:</h4>
            {% set ilosc = 0 %}
            {% set kwota = 0 %}
            {% for produkt in produkty  %}
                <ul>
                    <li><span class="greyLeft">ISBN: </span><span class="potwierdzenieRight">{{ produkt.isbn.isbn }}</span></li>
                    <li><span class="greyLeft">tytuł: </span><span class="potwierdzenieRight">{{ produkt.tytul }}</span></li>
                    <li><span class="greyLeft">autor: </span><span class="potwierdzenieRight">{{ produkt.autor }}</span></li>
                    <li><span class="greyLeft">cena: </span><span class="potwierdzenieRight">{{ produkt.cenaProduktu }}</span></li>
                    <li><span class="greyLeft">ilość: </span><span class="potwierdzenieRight">{{ produkt.ilosc }}</span></li>
                </ul>
                {% set ilosc = ilosc + produkt.ilosc %}
                {% set kwota = kwota + produkt.ilosc * produkt.cenaproduktu %}

            {% endfor %}
<h4 class="greyHeader">Kwota</h4>
<ul> {{ kwota|number_format(2) }}</ul>
                 <h4 class="greyHeader"> Razem Produktów</h4>
                 <ul>{{ ilosc }}</ul>
<h4 class="greyHeader">Status zamówienia</h4>
                {% if is_granted('ROLE_ADMIN') %}
                     {{ form(StatusForm) }}
                {% else %}
                    <ul>{{ zamowienie.idstatus.status }}</ul>
                    {% if zamowienie.idstatus.idstatus == 1 %}
                        <h4 class="greyHeader">Zapłać teraz</h4>   
                           <fieldset class="potwierdzenie">
                               <a class="OrangeButtonSimple" href="#">PayU</a>
                               <a class="OrangeButtonSimple" style="float: right" href="#">PayPal</a>
                           </fieldset>
                    {% endif %}
                {% endif %}
            
    </div>   
        </div>
    </div>
{% endblock contents %}


